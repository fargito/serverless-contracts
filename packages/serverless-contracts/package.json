{
  "name": "@swarmion/serverless-contracts",
  "description": "Generate and use type-safe contracts between your Serverless services.",
  "version": "0.18.1",
  "author": "fargito",
  "license": "MIT",
  "homepage": "https://www.swarmion.dev",
  "bugs": "https://github.com/swarmion/swarmion/issues",
  "repository": "swarmion/swarmion.git",
  "keywords": [
    "Contracts",
    "Serverless",
    "Typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "package": "pnpm clean && pnpm package-transpile && pnpm package-types && pnpm package-types-aliases",
    "package-transpile": "tsup src/index.ts",
    "package-types": "tsc -p tsconfig.build.json",
    "package-types-aliases": "tsc-alias -p tsconfig.build.json",
    "test": "pnpm test-linter && pnpm test-type && pnpm test-unit && pnpm test-circular",
    "test-circular": "pnpm depcruise --validate .dependency-cruiser.js .",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "vitest run --coverage --passWithNoTests",
    "watch": "pnpm clean && concurrently 'pnpm:package-* --watch'"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.226.0",
    "@serverless/typescript": "^3.25.0",
    "@swarmion/serverless-helpers": "^0.18.1",
    "ajv": "^8.11.2",
    "axios": "^1.2.2",
    "http-errors": "^2.0.0",
    "json-schema-to-ts": "^2.6.2",
    "lodash": "^4.17.21",
    "openapi-types": "12.1.0",
    "ts-toolbelt": "^9.6.0"
  },
  "devDependencies": {
    "@middy/core": "^4.0.0",
    "@middy/error-logger": "^3.6.2",
    "@middy/http-cors": "^3.6.2",
    "@types/aws-lambda": "^8.10.109",
    "@types/http-errors": "^2.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitest/coverage-c8": "^0.25.7",
    "aws-sdk": "^2.1272.0",
    "aws-sdk-client-mock": "^2.0.1",
    "concurrently": "^7.6.0",
    "dependency-cruiser": "^12.1.0",
    "eslint": "^8.29.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "serverless": "^3.25.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.25.7"
  },
  "peerDependencies": {
    "axios": "^1.2.2"
  }
}
