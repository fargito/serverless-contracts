{
  "name": "create-swarmion-app",
  "description": "Create an app based on the Swarmion template.",
  "version": "0.17.0",
  "contributors": [
    "MaximeVivier",
    "Sc0ra",
    "guillaumeduboc"
  ],
  "license": "MIT",
  "homepage": "https://www.swarmion.dev",
  "bugs": "https://github.com/swarmion/swarmion/issues",
  "repository": "swarmion/swarmion.git",
  "keywords": [
    "Serverless",
    "Swarmion",
    "Typescript",
    "app",
    "create"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ncc build ./src/index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "clean": "rimraf dist",
    "dev": "ncc build ./src/index.ts -w -o dist/",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "test": "pnpm test-linter && pnpm test-type && pnpm test-unit && pnpm test-circular",
    "test-circular": "pnpm depcruise --validate .dependency-cruiser.js .",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc",
    "test-unit": "vitest run --coverage --passWithNoTests",
    "watch": "pnpm clean && concurrently 'pnpm:package-* --watch'"
  },
  "bin": "./dist/index.js",
  "dependencies": {
    "async-retry": "^1.3.3",
    "chalk": "^5.1.2",
    "commander": "^9.4.1",
    "cross-spawn": "^7.0.3",
    "got": "^12.5.3",
    "prettier": "^2.8.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "tar": "^6.1.13",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.5",
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^18.11.13",
    "@types/prompts": "^2.4.2",
    "@types/rimraf": "^3.0.2",
    "@types/tar": "^6.1.3",
    "@types/validate-npm-package-name": "^4.0.0",
    "@vercel/ncc": "^0.36.0",
    "@vitest/coverage-c8": "^0.26.0",
    "concurrently": "^7.6.0",
    "dependency-cruiser": "^12.1.0",
    "eslint": "^8.29.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.26.0"
  }
}
